extends layout 

block content 
    h1 Category: #{category.name}
        if items.length 
            d1 
                ul
                    each item in items 
                        li
                            a(href=item.url) #{item.name}
                            |  - #{item.description}
                            |  - #{item.price}$
        else 
            p This category has no items.
    h6 
    a(href=category.url+"/delete") Delete Category
    h6
    a(href=category.url+"/edit") Edit Category